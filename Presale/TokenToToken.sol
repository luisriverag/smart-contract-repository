library TransferHelper {
    function safeApprove(
        address token,
        address to,
        uint256 value
    ) internal {
        // bytes4(keccak256(bytes('approve(address,uint256)')));
        (bool success, bytes memory data) = token.call(abi.encodeWithSelector(0x095ea7b3, to, value));
        require(
            success && (data.length == 0 || abi.decode(data, (bool))),
            'TransferHelper::safeApprove: approve failed'
        );
    }

    function safeTransfer(
        address token,
        address to,
        uint256 value
    ) internal {
        // bytes4(keccak256(bytes('transfer(address,uint256)')));
        (bool success, bytes memory data) = token.call(abi.encodeWithSelector(0xa9059cbb, to, value));
        require(
            success && (data.length == 0 || abi.decode(data, (bool))),
            'TransferHelper::safeTransfer: transfer failed'
        );
    }

    function safeTransferFrom(
        address token,
        address from,
        address to,
        uint256 value
    ) internal {
        // bytes4(keccak256(bytes('transferFrom(address,address,uint256)')));
        (bool success, bytes memory data) = token.call(abi.encodeWithSelector(0x23b872dd, from, to, value));
        require(
            success && (data.length == 0 || abi.decode(data, (bool))),
            'TransferHelper::transferFrom: transferFrom failed'
        );
    }

    function safeTransferETH(address to, uint256 value) internal {
        (bool success, ) = to.call{value: value}(new bytes(0));
        require(success, 'TransferHelper::safeTransferETH: ETH transfer failed');
    }
}


contract TokenToTokenSale is Context, Ownable {
    using SafeMath for uint256;

    address private constant TOKENONE = CONTRACT_ADDRESS;

    uint256 public _totalSupply = 50 * 10**12 * 10**9; // There is 50T (5% of the total supply) of $TOKENTWO to go about, this value slowly decreases
    uint256 public _rate        = 3;                   // How many $TOKENONE is equal to 1 $TOKENTWO

    address[] _deposited;
    mapping (address => bool) private _hasDeposited;
    mapping (address => uint256) private _balances; // A mapping of how much $TOKENONE this person deposited

    constructor() {}

    receive() external payable {}
    fallback() external payable {}

    function withdraw() external onlyOwner {
        TransferHelper.safeTransferETH(owner(), address(this).balance);
    }

    function withdrawToken(address token) external onlyOwner {
        IERC20(token).transfer(owner(), IERC20(token).balanceOf(address(this)));
    }

    /**
     * @notice Returns how much $TOKENONE the 'account' deposited
     */
    function balanceOf(address account) external view returns(uint256) {
        return _balances[account];
    }

    /**
     * @notice Returns all the addresses that deposited $TOKENONE
     */
    function getAddresses() external view returns(address[] memory) {
        return _deposited;
    }

    /**
     * @notice The person executing this function will swap their TOKENONE for TOKENTWO
     */
    function exchange(uint256 amountTOKENONE) external {
         require(amountTOKENONE > 0, "No value in transaction");
        require(_totalSupply > 0, "Supply has been claimed");
         _exchange(msg.sender, amountTOKENONE);
    }

    function _exchange(address sender, uint256 amountTOKENONE) internal {
        uint256 amountTOKENTWO = amountTOKENONE.div(_rate);
        require(amountTOKENTWO <= _totalSupply, "Allocated TOKENTWO has been claimed.");

        // Transfer token to contract and mark how much of it has been received
        IERC20(TOKENONE).transferFrom(msg.sender, address(this), amountTOKENONE);
        _balances[sender] = _balances[sender].add(amountTOKENONE);

        // Mark the sender as a deposited address
        if (!_hasDeposited[sender]) {
            _hasDeposited[sender] = true;
            _deposited.push(sender);
        }

        // Reduce the total supply left to be claimed
        _totalSupply -= amountTOKENTWO;
    }
}
